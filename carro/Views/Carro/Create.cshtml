@model carro.Models.Carro

<div class="form-horizontal">
    <form action="Create" method="Post">

        <div class="form-group">
            <label>Id</label>
            <input  class="form-control"
                    type="text" name="id"/>
        </div>

        <div class="form-group">
            <label>Ano de Fabricação</label>
            <input  class="form-control"
                    type="text" name="ano_fabricacao"/>
        </div>

        <div class="form-group">
            <label>Portas</label>
            <input  class="form-control"
                    type="text" name="portas"/>
        </div>


        <div class="form-group">
            <label>cor</label>
            <input  class="form-control"
                    type="text" name="cor"/>
        </div>


        <div class="form-group">
            <label>Tipo de Banco</label>
            <input  class="form-control"
                    type="text" name="tipo_banco"/>
        </div>

         <div class="form-group">
            <label>Marca</label>
            <input  class="form-control"
                    type="text" name="marca"/>
        </div>



        <input  class="btn btn-primary" 
                type="submit" value="Salvar"/>

    </form>
</div>